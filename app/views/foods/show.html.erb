<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @food.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @food.description %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @food.image_url %>
</p>

<p>
  <strong>Price:</strong>
  <%= @food.price %>
</p>

<p>
  <strong>Reviews:</strong>
  <br/><br/>
  <% @food.reviews.each do |review| %>
    Reviewer: <%= review.reviewer_name %><br/>
    Title: <%= review.title %><br/>
    Description: <%= review.description %><br/>
  <% end %>
</p>

