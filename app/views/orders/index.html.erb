<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <% @orders.each do |order| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td>
        <%= image_tag(order.image_url, class: 'list_image') %>
      </td>
      <td class="list_description">
        <dl>
          <dt><%= order.name %></dt>
          <dd><%= truncate(strip_tags(order.description), length: 80) %></dd>
        </dl>
      </td>
      <td class="list_actions">
        <%= link_to 'Show', order %><br/>
        <%= link_to 'Edit', edit_order_path(order) %><br/>
        <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

