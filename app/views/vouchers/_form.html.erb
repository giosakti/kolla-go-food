  </div>

  <div class="field">
    <%= f.label :valid_through %>
    <%= date_select :voucher, :valid_through %>
  </div>

  <div class="field">
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </div>

  <div class="field">
    <%= f.label :unit %>
    <%= select(:voucher, :unit, ["percent", "rupiah"]) %>
  </div>

  <div class="field">
    <%= f.label :max_amount %>
    <%= f.text_field :max_amount %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
